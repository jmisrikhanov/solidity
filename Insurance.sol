// The following codes are written by us based on Solidity documentation
contract Insurance is Ownable { 
    using SafeMath for uint256;
    uint256 public constant precipitationThreshold = 50; // The minimum threshold setted for the project
    uint256 currentPrecipitation = 0; 
    uint256 contractStartDate;
    address farmer;
    uint256 paymentAmount;
    uint256 resetValue = 0;
    event acceptedData(uint256 _precipitation); 
    event transferCompleted( 
        uint256 _paymentTime,
        uint256 _totalTransferAmount,
        uint256 _thresholdPrecipitation
    );



    // in constructor we set the data that should be received in order to deploy the contract
    constructor(
        address _farmer,
        uint256 _paymentAmount
    ) payable { 
        require(msg.value >= _paymentAmount, "deposit amount must be greater or equal to _paymentAmount");
        farmer = _farmer;
        contractStartDate = block.timestamp;
        paymentAmount = _paymentAmount;
    }


    // To get the payment amount
    function getPaymentAmount() external view returns (uint256) {
        return paymentAmount;
    }

    // To get the reset value 
    function getResetValue() external view returns (uint256) {
        return resetValue;
    }

    // To get the start date of the contract
    function getContractStartDate() external view returns (uint256) {
        return contractStartDate;
    }


    // To get the farmer account
    function getFarmer() external view returns (address) {
        return farmer;
    }

    // To get the contract balance
    function getContractBalance() external view returns (uint256) {
        return address(this).balance;
    }

    // To get the current precipitation
    function getCurrentPrecipitation() external view returns (uint256) {
        return currentPrecipitation; 
    }


    // function to set a new farmer wallet account
    function setFarmer(address _farmer) external onlyOwner { 
        farmer = _farmer; 
    }

    // The precipitation data from oracle is sent by the means of precipitationCheck 
    // or manually input precipitation in case of problem with the oracle
    function precipitationCheck(uint256 _precipitation)
        external
        onlyOwner
    {
        currentPrecipitation = _precipitation;

        require(
            currentPrecipitation >= precipitationThreshold,
            "current precipitation must be more or equal to precipitationThreshold"
        );

        contractPayment();

        emit acceptedData(_precipitation);
    }

     // To process the payment if predefined conditions are met
    function contractPayment() internal { 
        bool success; 
        if (address(this).balance >= paymentAmount) {
            //Transfer agreed amount to client
            (success, ) = payable(farmer).call{value: paymentAmount}(""); 
            paymentAmount = resetValue;
        } 
        
        require(success, "payment failed"); 

        emit transferCompleted(block.timestamp, paymentAmount, currentPrecipitation);
    }


    receive() external payable {}
}
